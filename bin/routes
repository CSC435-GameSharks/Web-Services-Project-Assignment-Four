# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /diablocareer               controllers.DiabloCareer.index(battleTagName: String ?="", battleTagCode: String?="")
GET 	/diablohero					controllers.DiabloHero.index(battleID: String, hero:String)
GET		/diablofollower				controllers.DiabloFollower.index(follower: String ?="")

# Json API
GET   	/api/diablocareer			controllers.DiabloCareer.getJson(battleTagName: String ?="", battleTagCode: String?="")
GET 	/api/diablohero				controllers.DiabloHero.getJson(battleID: String, hero:String)
GET		/api/diablofollower			controllers.DiabloFollower.getJson(follower: String ?="")


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
