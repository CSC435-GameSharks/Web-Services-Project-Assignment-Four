# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /DiabloCareer               controllers.DiabloCareer.index(battleTagName: String ?="", battleTagCode: String?="")
GET 	/DiabloHero					controllers.DiabloHero.index(battleID: String, hero:String)
GET		/DiabloFollower				controllers.DiabloFollower.index(follower: String ?="")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
